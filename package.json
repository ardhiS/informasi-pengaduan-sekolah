    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/username/school-complaints-system.git"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "form-data": "^4.0.3"
  }
