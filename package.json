  "description": "Simplified School Complaints Management System - SMP PLUS AT-THAHIRIN",
  "main": "start.js",
  "scripts": {
    "start:full": "node start.js",
    "start:migrate": "node start.js --with-migrate",
    "dev:full": "node start.js",
    "backend:dev": "cd backend && npm run dev",
    "backend:start": "cd backend && npm run start",
    "backend:migrate": "cd backend && npm run migrate:up",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "test": "cd backend && npm test"
  },
  "keywords": [
    "school",
    "complaints",
    "management",
    "education",
    "hapi",
    "react"
  ],
